{
  "spec": {
    "template": {
      "spec": {
        "volumes": [
          {
            "rbd": {
              "readOnly": false,
              "fsType": "ext4",
              "secretRef": {
                "name": "ceph-secret"
              },
              "user": "admin",
              "image": "esdata1",
              "pool": "rbd",
              "monitors": [
                "172.17.1.11:6789"
              ]
            },
            "name": "es-data1"
          }
        ],
        "serviceAccount": "elasticsearch",
        "restartPolicy": "Always",
        "containers": [
          {
            "volumeMounts": [
              {
                "name": "es-data1",
                "mountPath": "/data"
              }
            ],
            "securityContext": {
              "privileged": false,
              "capabilities": {
                "add": [
                  "IPC_LOCK"
                ]
              }
            },
            "ports": [
              {
                "protocol": "TCP",
                "name": "transport",
                "containerPort": 9300
              }
            ],
            "name": "es-data1",
            "image": "registry.docker:5000/yeepay/elasticsearch:2.1.1",
            "env": [
              {
                "value": "/var/run/secrets/kubernetes.io/serviceaccount/ca.crt",
                "name": "KUBERNETES_CA_CERTIFICATE_FILE"
              },
              {
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                },
                "name": "NAMESPACE"
              },
              {
                "value": "myesdb",
                "name": "CLUSTER_NAME"
              },
              {
                "value": "false",
                "name": "NODE_MASTER"
              },
              {
                "value": "false",
                "name": "HTTP_ENABLE"
              },
              {
                "name": "ES_HEAP_SIZE",
                "value": "16g"
              }
            ]
          }
        ]
      },
      "metadata": {
        "labels": {
          "role": "data1",
          "component": "elasticsearch"
        }
      }
    },
    "selector": {
      "role": "data1",
      "component": "elasticsearch"
    },
    "replicas": 1
  },
  "metadata": {
    "name": "es-data1",
    "labels": {
      "role": "data1",
      "component": "elasticsearch"
    }
  },
  "kind": "ReplicationController",
  "apiVersion": "v1"
}
