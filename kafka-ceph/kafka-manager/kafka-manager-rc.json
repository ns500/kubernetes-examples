{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "labels": {
      "component": "kafka-manager"
    },
    "name": "kafka-manager"
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "component": "kafka-manager"
    },
    "template": {
      "metadata": {
        "labels": {
          "component": "kafka-manager"
        },
        "name": "kafka-manager"
      },
      "spec": {
        "containers": [
          {
            "name": "kafka-manager",
            "image": "registry.docker:5000/yeepay/kafka-manager:1.2.0",
	    "env": [
	      {
                "name": "ZK_SERVER_LIST",
	        "value": "zookeeper-1:2181,zookeeper-2:2181,zookeeper-3:2181,zookeeper-4:2181,zookeeper-5:2181"
	      }
	    ],
            "ports": [
              {
	        "name": "kafka-manager",
		"protocol": "TCP",
                "containerPort": 9001
              },
              {
	        "name": "offset",
		"protocol": "TCP",
                "containerPort": 8086
              }
            ],
            "command": [
              "/bin/sh",
              "-c"
            ],
            "args": [
              "sed -i -- 's/kafka-manager.zkhosts=ZK_SERVER_LIST/kafka-manager.zkhosts=\"zookeeper-1:2181,zookeeper-2:2181,zookeeper-3:2181,zookeeper-4:2181,zookeeper-5:2181\"/g' /opt/kafka-manager-1.2.0/conf/application.conf && cat /opt/kafka-manager-1.2.0/conf/application.conf && /opt/start.sh "
	    ],
	    "resources": {
	      "limits": {
	        "cpu": "2",
		"memory": "4096M"
	      }
	    },
            "volumeMounts": [
              {
                "mountPath": "/tmp/kafka-logs",
                "name": "kafka-1"
              }
            ]
          }
        ],
        "restartPolicy": "Always",
        "volumes": [
          {
            "name": "kafka-1",
            "rbd": {
              "monitors": [
                "10.149.149.3:6789"
              ],
              "pool": "rbd",
              "image": "kafka-1",
              "user": "admin",
              "secretRef": {
                "name": "ceph-secret"
              },
              "fsType": "xfs",
              "readOnly": false
            }
          }
        ]
      }
    }
  }
}
