{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "labels": {
      "component": "kafka"
    },
    "name": "kafka-1"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "kafka-1"
    },
    "template": {
      "metadata": {
        "labels": {
          "component": "kafka"
        },
        "name": "kafka-1"
      },
      "spec": {
        "containers": [
          {
            "name": "kafka-1",
            "image": "registry.docker:5000/yeeepay/kafka:latest",
            "ports": [
              {
                "containerPort": 9092
              }
            ],
            "command": [
              "/bin/sh",
              "-c"
            ],
            "args": [
              "sed -i -- 's/broker.id=0/broker.id=1/g' /home/kafka/kafka/config/server.properties && sed -i -- 's/num.network.threads=3/num.network.threads=10/g' /home/kafka/kafka/config/server.properties && sed -i -- 's/num.io.threads=8/num.io.threads=20/g' /home/kafka/kafka/config/server.properties && sed -i -- 's/zookeeper.connect=localhost:2181/zookeeper.connect=\"zookeeper-1:2181,zookeeper-2:2181,zookeeper-3:2181,zookeeper-4:2181,zookeeper-5:2181\"/g' /home/kafka/kafka/config/server.properties && /home/kafka/kafka/bin/kafka-server-start.sh /home/kafka/kafka/config/server.properties "
	    ],
	    "resources": {
	      "requests": {
	        "cpu": "10",
		"memory": "8192MiB"
	      },
	      "limits": {
	        "cpu": "20",
		"memory": "20480MiB"
	      }
	    },
            "volumeMounts": [
              {
                "mountPath": "/tmp/kafka-logs",
                "name": "kafka-1"
              }
            ]
          }
        ],
        "restartPolicy": "Always",
        "volumes": [
          {
            "name": "kafka-1",
            "rbd": {
              "monitors": [
                "10.149.149.3:6789"
              ],
              "pool": "rbd",
              "image": "kafka-1",
              "user": "admin",
              "secretRef": {
                "name": "ceph-secret"
              },
              "fsType": "xfs",
              "readOnly": false
            }
          }
        ]
      }
    }
  }
}
